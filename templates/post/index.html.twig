{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="container">
        <h3>Posts</h3>
        {% for post in posts %}
            <div class="post-card mb-3 p-2">
                <div class="row">
                    <div class="col-12">
                        <a href="{{ url('app_post_details', { id: post.id }) }}">Post ({{ post.id }})</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        <a href="{{ url('app_post_new')}}" class="btn btn-primary">Create Post</a>
    </div>
{% endblock %}
